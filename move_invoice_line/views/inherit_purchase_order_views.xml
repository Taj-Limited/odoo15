<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position='after'>
                    <field name="sale_order_id" string="Sale Order"/>
                </xpath>
                <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_qty']"
                       position="after">
                    <field name="truck_number" optional="hide"/>
                    <field name="cargo_type" optional="hide"/>
                    <field name="rout" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>